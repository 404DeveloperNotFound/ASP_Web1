@model WebApplication1.Models.Items

@{
    ViewData["Title"] = "Item Details";
}

<div class="container my-5">
    <div class="card bg-dark text-white p-4 shadow-lg">
        <div class="row g-4 align-items-start">
            <!-- Left Column -->
            <div class="col-md-4 d-flex justify-content-center">
                <div class="image-container">
                    <img src="@Url.Content(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/default.png" : Model.ImageUrl)"
                         class="img-fluid rounded shadow"
                         alt="Item Image" />
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-8">
                <h2 class="card-title">@Model.Name</h2>
                <h4 class="text-info mb-3">@Model.Price.ToString("C")</h4>

                <p>
                    <strong>Serial Number:</strong> @Model?.SerialNumber <br />
                    <strong>Category:</strong> @Model?.Category?.Name <br />
                    <strong>Quantity in Stock:</strong> @Model?.Quantity <br />
                    @* <strong>Clients:</strong> *@
                    @* @if (Model.Clients != null && Model.Clients.Count > 0) *@
                    @* { *@
                    @*     int cnt = 0; *@
                    @*     foreach (var c in Model.Clients) *@
                    @*     { *@
                    @*         @c.Username *@
                    @*         @(cnt != Model.Clients.Count - 1 ? ", " : "") *@
                    @*         cnt++; *@
                    @*     } *@
                    @* } *@
                    @* else *@
                    @* { *@
                    @*     <span>None</span> *@
                    @* } *@
                </p>

                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    }
                    else
                    {
                        <a asp-controller="Cart" asp-action="BuyNow" asp-route-id="@Model.Id" class="btn btn-warning">Buy Now</a>
                        <button type="button" class="btn btn-sm btn-primary add-to-cart-btn" data-id="@Model.Id">Add to Cart</button>

                        @* <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary">Add to Cart</a> *@
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
        btn.addEventListener('click', function () {
            const itemId = this.getAttribute('data-id');

            fetch(`/Cart/AddToCart/${itemId}`)
                .then(response => response.json())
                .then(data => {
                    alert(data.message);
                })
                .catch(error => {
                    alert("An error occurred while adding the item.");
                    console.error("Error:", error);
                });
        });
    });
</script>