@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    @if (User.Identity.IsAuthenticated)
    {
        <h2>Welcome, @Model.UserName!</h2>
        <h3>Email: @Model.Email</h3>
        @* <p>User ID: @Model.Id</p> *@
        <a asp-controller="item"  class="text-white text-decoration-none font-monospace my-5 underline-hover "><h3>Go to Items Page</h3></a>
    }
    else
    {
        <h1 class="display-4">Welcome</h1>
        <h3 class="d-flex justify-content-center align-items-center gap-2">Login to see items  <button class="btn btn-success px-5 py-2 rounded-4"><a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a></button></h3>
    }
</div>
