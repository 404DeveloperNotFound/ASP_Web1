@model WebApplication1.ViewModel.PaymentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Payment";
}
<div class="container">

<h2 class="text-center my-4">Complete Your Payment</h2>

<div class="d-flex justify-content-between gap-4"> 
    <div class="d-flex w-50 flex-column"> 
        <!-- Order Summary -->
        <div class="order-summary text-black">
            <h4>Order Summary</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                        @if (Model.CartItems == null || Model.CartItems.Count == 0)
                        {
                            <tr>
                                <td colspan="4" class="text-center">No items in the cart.</td>
                            </tr>
                        }
                        else{
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td>@((item.Quantity * item.Price).ToString("C"))</td>
                                </tr>
                            }
                        }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end"><strong>Total</strong></td>
                        <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- Shipping Address -->
        <div class="shipping-address text-black">
            <div class="d-flex justify-content-between"> 
                <h4>Shipping Address</h4>
                <a asp-controller="Address" asp-action="Select">Change</a>
            </div>
            <p>@ViewBag.SelectedAddress?.StreetAddress</p>
            <p>@ViewBag.SelectedAddress?.City, @ViewBag.SelectedAddress?.State - @ViewBag.SelectedAddress?.PostalCode</p>
       </div>
    </div>

    <!-- Payment Method -->
        <div class="payment-method w-50 text-black">
            <h4>Payment Method</h4>

            <div asp-validation-summary="All" class="text-danger"></div>

            <form asp-action="ConfirmPayment" method="post">
                <div class="mb-3">
                    <label asp-for="CreditCardNumber" class="form-label"></label>
                    <input asp-for="CreditCardNumber" class="form-control" />
                    <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ExpiryDate" class="form-label"></label>
                    <input asp-for="ExpiryDate" class="form-control" type="month" />
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CVV" class="form-label"></label>
                    <input asp-for="CVV" class="form-control" />
                    <span asp-validation-for="CVV" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">
                    Confirm Payment
                </button>
            </form>
        </div>
</div>

<div class="mt-3 text-center">
    <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary">Back to Cart</a>
</div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
        .order-summary, .shipping-address, .payment-method {
            border: 1px solid #ddd;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .order-summary table {
            width: 100%;
            margin-bottom: 20px;
        }

        .order-summary th, .order-summary td {
            text-align: center;
        }

        .payment-method input {
            margin-bottom: 15px;
        }

        .payment-method .form-label {
            font-weight: bold;
        }

        .btn-block {
            width: 100%;
        }

        .btn-secondary {
            width: auto;
            margin-top: 10px;
        }
    }
</style>
