@model WebApplication1.Models.Items;
@{
    ViewData["Title"] = "Create";
}

<h3>Create an Item</h3>

<form asp-action="Create" method="post" id="create_form"> 
    <div class="mt-3">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="create_name" />
    </div>
    <div class="mt-3">
        <label for="Price">Price</label>
        <input type="text" asp-for="Price" class="form-control" id="create_price" />
    </div>
    <button class="btn btn-success mt-3" type="submit">Submit</button>
</form>
