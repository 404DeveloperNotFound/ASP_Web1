@model WebApplication1.Models.Items;
@{
    ViewData["Title"] = "Edit";
}

<div class="container">

<h3>Edit an Item</h3>

<form asp-action="Edit" method="post" id="create_form">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="RowVersion" />
    <div class="mt-3">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="create_name" />
    </div>
    <div class="mt-3">
        <label for="Price">Price</label>
        <input type="text" asp-for="Price" class="form-control" id="create_price" />
    </div>
    <div class="mt-3">
        <label for="ImageUrl">Image Url</label>
        <input type="text" asp-for="ImageUrl" class="form-control" id="create_price" />
    </div>  
    <div class="mt-3">
        <label for="Quantity">Quantity</label>
        <input type="text" asp-for="Quantity" class="form-control" id="create_price" />
    </div>
    <div class="mt-3" hidden>
        <label hidden for="SerialNumber">Serial Number</label>
        <input hidden value=@Model.SerialNumber type="text" asp-for="SerialNumber" class="form-control" id="create_price" />
    </div>
    <div class="mt-3">
        <label for="CategoryId">Category</label>
       <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
    </div>
    <button class="btn btn-success mt-3" type="submit">Submit</button>
</form>

</div>