@model WebApplication1.DataTransferObjects.OrderDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Order Placed";
}
<div class="container py-4">
    <h2 class="text-success mb-4"><i class="fas fa-check-circle me-2"></i>Order Successfully Placed!</h2>

    <div class="card bg-black text-white border-0">
        <div class="card-body p-3">
            <p class="text-muted"><strong>Order ID:</strong> <span class="text-success">@Model.Id</span></p>
            <p class="text-muted"><strong>Order Date:</strong> <span class="text-success">@Model.OrderDate.ToString("g")</span></p>
            <p class="text-muted"><strong>Status:</strong> <span class="text-success">@Model.Status</span></p>
            <p class="text-muted"><strong>Billing Address:</strong> <span class="text-success">@Model.Address.StreetAddress, @Model.Address.City, @Model.Address.State, @Model.Address.Country - @Model.Address.PostalCode</span></p>

            <table class="table table-dark border-success mt-4">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Price (Each)</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.ItemName</td>
                            <td>@item.Quantity</td>
                            <td class="text-success">@item.Price.ToString("C")</td>
                            <td class="text-success">@((item.Price * item.Quantity).ToString("C"))</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex gap-2 mt-4">
                <a href="/Order/MyOrders" class="btn btn-outline-success">
                    <i class="fas fa-list-alt me-2"></i>Go to My Orders
                </a>
                <a href="/Item/Index" class="btn btn-outline-success">
                    <i class="fas fa-shopping-bag me-2"></i>Shop More
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #fff;
    }

    .card {
        transition: transform 0.2s ease;
    }

    .card:hover {
        transform: translateY(-2px);
    }

    .btn-outline-success {
        border-color: #28a745;
        color: #28a745;
    }

    .btn-outline-success:hover {
        background-color: #28a745;
        color: #fff;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .text-danger {
        color: #dc3545 !important;
    }

    .table-dark {
        --bs-table-bg: #121212;
        --bs-table-color: #fff;
        --bs-table-border-color: #28a745;
    }

    .table-dark th, .table-dark td {
        border-color: #28a745;
        text-align: center;
    }

    .text-success {
        color: #28a745 !important;
    }

    .text-muted {
        color: rgba(255, 255, 255, 0.6) !important;
    }
</style>