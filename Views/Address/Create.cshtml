@model WebApplication1.Models.Address
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add Address";
    string returnUrl = ViewBag.ReturnUrl as string;
}
<div class="container py-4">
    <h2 class="text-success mb-4"><i class="fas fa-plus-circle me-2"></i>Add New Address</h2>

    <div class="card bg-black text-white border-0 mb-4">
        <div class="card-body p-3">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" name="returnUrl" value="@returnUrl" />

                <div class="mb-3">
                    <label asp-for="StreetAddress" class="form-label text-white"></label>
                    <input asp-for="StreetAddress" class="form-control bg-black text-white border-success" placeholder="Enter street address" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="City" class="form-label text-white"></label>
                    <input asp-for="City" class="form-control bg-black text-white border-success" placeholder="Enter city" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="State" class="form-label text-white"></label>
                    <input asp-for="State" class="form-control bg-black text-white border-success" placeholder="Enter state" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Country" class="form-label text-white"></label>
                    <input asp-for="Country" class="form-control bg-black text-white border-success" placeholder="Enter country" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PostalCode" class="form-label text-white"></label>
                    <input asp-for="PostalCode" class="form-control bg-black text-white border-success" placeholder="Enter postal code" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Add Address
                    </button>
                    <a asp-action="Index" asp-controller="Address" asp-route-returnUrl="@returnUrl" class="btn btn-outline-success">
                        <i class="fas fa-arrow-left me-2"></i>Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #121212;
        color: #fff;
    }

    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .form-control {
        background-color: #121212;
        color: #fff;
        border-color: #28a745;
    }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 168, 69, 0.25);
        }

    .btn-outline-success {
        border-color: #28a745;
        color: #28a745;
    }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: #fff;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .text-danger {
        color: #dc3545 !important;
    }
</style>