@model List<WebApplication1.DataTransferObjects.AddressDto>
@{
    ViewData["Title"] = "Select Address";
    string returnUrl = ViewBag.ReturnUrl;
}

<div class="container mt-4">
    <h2>Select Shipping Address</h2>
    <form method="post" asp-action="Select">
        <input type="hidden" name="returnUrl" value="@returnUrl" />
        @foreach (var address in Model)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="addressId" value="@address.Id" @(address.IsDefault ? "checked" : "") />
                <label class="form-check-label">
                    @address.StreetAddress, @address.City, @address.State, @address.Country - @address.PostalCode
                    @if (address.IsDefault)
                    {
                        <span class="badge bg-primary">Default</span>
                    }
                </label>
            </div>
        }
        @if(Model.Count > 0){
            <button type="submit" class="btn btn-success mt-3">Use This Address</button>
        }
        else
        {
            <h6> You have no Addresses</h6>
        }
        <a asp-action="Create" asp-route-returnUrl="@returnUrl" class="btn btn-secondary mt-3">Add New Address</a>
    </form>
</div>
