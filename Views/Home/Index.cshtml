<style>
    /* Custom Styles */
    .hero-section {
        background: linear-gradient(135deg, #1a1a1a 0%, #000000 100%);
        color: white;
        position: relative;
    }

    .hero-image-container {
        position: relative;
        height: 100%;
    }

    .hero-image {
        background: url('https://images.unsplash.com/photo-1441986300917-64674bd600d8') center/cover;
        height: 500px;
        border-radius: 16px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .category-card {
        height: 300px;
        transition: transform 0.3s ease;
    }

        .category-card:hover {
            transform: translateY(-5px);
        }

        .category-card img {
            height: 100%;
            width: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .category-card:hover img {
            transform: scale(1.05);
        }

    .category-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, transparent 100%);
        padding: 1.5rem;
        color: white;
    }

    .product-card {
        transition: all 0.3s ease;
        border: 1px solid #333;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
            border-color: #7bc8b6;
        }

    .product-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: bold;
        z-index: 1;
    }

    .testimonial-card {
        background-color: #1a1a1a;
        border: 1px solid #333;
    }

    .benefit-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background-color: rgba(255, 193, 7, 0.1);
    }
</style>