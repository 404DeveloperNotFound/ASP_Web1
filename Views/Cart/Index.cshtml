@model IEnumerable<WebApplication1.DataTransferObjects.CartItemDto>
@{
    ViewData["Title"] = "Your Cart";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}


<div class="container">
    <h2>Your Cart</h2>

    @if (Model == null || !Model.Any())
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="table table-dark dark-theme bg-dark text-white">
            <thead>
                <tr>
                    <th></th>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td>
                            <img src="@item.ImageUrl" alt="Item Image" class="img-thumbnail" style="height: 100px; width: 100px; object-fit: cover;" />
                        </td>
                        <td class="fw-semibold">@item.Name</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>
                            <div class="d-flex align-items-center justify-content-center gap-2">
                                <form method="post" asp-action="UpdateQuantity" asp-controller="Cart" class="m-0">
                                    <input type="hidden" name="itemId" value="@item.ItemId" />
                                    <input type="hidden" name="quantity" value="@(item.Quantity - 1)" />
                                    <button type="submit" class="btn btn-outline-light btn-sm px-2"
                                    @(item.Quantity <= 1 ? "disabled" : "")>
                                        -
                                    </button>
                                </form>

                                <span class="px-2">@item.Quantity</span>

                                <form method="post" asp-action="UpdateQuantity" asp-controller="Cart" class="m-0">
                                    <input type="hidden" name="itemId" value="@item.ItemId" />
                                    <input type="hidden" name="quantity" value="@(item.Quantity + 1)" />
                                    <button type="submit" class="btn btn-outline-light btn-sm px-2"
                                    @(item.Quantity >= item.MaxQuantity ? "disabled" : "")>
                                        +
                                    </button>
                                </form>
                            </div>
                        </td>
                        <td>@((item.Price * item.Quantity).ToString("C"))</td>
                        <td>
                            <a class="btn btn-danger btn-sm" asp-action="RemoveFromCart" asp-controller="Cart" asp-route-id="@item.ItemId">
                                Remove
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
        <div class="d-flex justify-content-between mb-3 mt-5">
            <a href="/Order/Payment" class="btn btn-success">Proceed to Payment</a>
            <h4>Total: @Model.Sum(item => item.Price * item.Quantity).ToString("C")</h4>
        </div>
    }
</div>
